<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<testPlan>
  <planSettings>
    <planSetting name="testEnvironment">
      <value valueClass="string">Dev</value>
    </planSetting>
    <planSetting name="browserProvider">
      <value valueClass="string">Desktop:Full Screen</value>
    </planSetting>
    <planSetting name="webBrowser">
      <value valueClass="string">Chrome_Headless</value>
    </planSetting>
  </planSettings>
  <planFeatures>
    <planFeature enabled="true" name="PIECHART" type="OUTPUT">
      <settings mutable="Mutable">
        <namedValue name="enabled">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeLegend">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="artifactName">
          <value class="value" valueClass="string">pieChart.png</value>
        </namedValue>
      </settings>
    </planFeature>
    <planFeature enabled="true" name="PDF" type="OUTPUT">
      <settings mutable="Mutable">
        <namedValue name="enabled">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeTestCaseSummary">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeAllFailuresInSummary">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeTestCaseDetails">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeOnlyFailures">
          <value class="value" valueClass="boolean">false</value>
        </namedValue>
        <namedValue name="includeOnlyBdd">
          <value class="value" valueClass="boolean">false</value>
        </namedValue>
        <namedValue name="includeSkippedTestSteps">
          <value class="value" valueClass="boolean">false</value>
        </namedValue>
        <namedValue name="includeTestCasePathHierarchy">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeTestCaseDescription">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeTestStepTime">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeTestCaseWarningMessages">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeTestCaseInfoMessages">
          <value class="value" valueClass="boolean">false</value>
        </namedValue>
        <namedValue name="includeTestCaseDebugMessages">
          <value class="value" valueClass="boolean">false</value>
        </namedValue>
        <namedValue name="includeTestCaseScreenshots">
          <value class="value" valueClass="boolean">true</value>
        </namedValue>
        <namedValue name="includeFullScreenShot">
          <value class="value" valueClass="boolean">false</value>
        </namedValue>
        <namedValue name="artifactName">
          <value class="value" valueClass="string">executionReport.pdf</value>
        </namedValue>
      </settings>
    </planFeature>
    <planFeature enabled="true" name="EMAIL" type="NOTIFICATION">
      <settings mutable="Mutable">
        <namedValue name="cc">
          <value class="value"/>
        </namedValue>
        <namedValue name="subject">
          <value class="value" valueClass="string">Copado Release Run Report</value>
        </namedValue>
        <namedValue name="emailBody">
          <value class="value" valueClass="string">&lt;p&gt;&lt;font face="Segoe UI"&gt;Here are the results from the most recent Copado Release test plan.&lt;/font&gt;&lt;/p&gt;&lt;p&gt;{TestArtifact('pieChart.png')}&lt;/p&gt;&lt;p&gt;{TestArtifact('executionReport.pdf')}&lt;/p&gt;&lt;p&gt;&lt;/p&gt;&lt;ul&gt;&lt;li&gt;&lt;span style="font-size: 0.9em;"&gt;Passed: {SuccessfulCount}&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style="font-size: 0.9em;"&gt;Failed:&amp;nbsp;&lt;/span&gt;&lt;span style="font-size: 0.9em;"&gt;{FailureCount}&lt;/span&gt;&lt;/li&gt;&lt;/ul&gt;&lt;p&gt;&lt;/p&gt;</value>
        </namedValue>
        <namedValue name="to">
          <value class="value" valueClass="string">michael.dailey@provartesting.com</value>
        </namedValue>
      </settings>
    </planFeature>
  </planFeatures>
</testPlan>
